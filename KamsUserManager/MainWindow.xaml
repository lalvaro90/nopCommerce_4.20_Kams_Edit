<Window x:Class="KamsUserManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KamsUserManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="topInfo" Height="160"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Margin="0,2,0,272" Grid.RowSpan="2">
            <Label Name="lblEmail" Content="Email a Actualizar" Height="23" Width="303" Canvas.Left="9" Canvas.Top="90"></Label>
            <TextBox x:Name="txtEmailToSearch" TextWrapping="Wrap" Width="309" Canvas.Left="11" Canvas.Top="113"/>
            <Label Content="New Password" Canvas.Left="12" Canvas.Top="131"></Label>
            <TextBox Name="txtPassword" Canvas.Left="12" Canvas.Top="157" Width="308"></TextBox>
            <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Canvas.Left="291" Canvas.Top="193"></Button>
        </Canvas>
        <ProgressBar x:Name="prgLoading" IsIndeterminate="True" Visibility="Hidden" HorizontalAlignment="Left" Height="18" Margin="10,62,0,0" VerticalAlignment="Top" Width="312"/>

    </Grid>
</Window>
